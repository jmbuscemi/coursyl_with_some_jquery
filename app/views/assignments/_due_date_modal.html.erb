<div id="due-date-modal<%= "#{assignment.id}" %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3><%= assignment.name %></h3>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= form_for(assignment) do |f| %>
        <div class='input-group date'>
          <%= f.label :active_at, "Date Assigned" %>
          <%= f.date_field :active_at, "id" => "datetimepicker8" %>
          <span class="input-group-addon">
            <span class="fa fa-calendar">
            </span>
          </span>
        </div>

        <div class='input-group date'>
          <%= f.label :due_at, "Due Date" %>
          <%= f.date_field :due_at, "id" => "datetimepicker8"  %>
          <span class="input-group-addon">
            <span class="fa fa-calendar">
            </span>
          </span>
        </div>
        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
